			<a href="javascript:void(0)" title="Добавить место" onclick="mod_passport.getPlaceForm('education',  {php}echo PlaceMgr::PT_HIGHER_EDUCATION;{/php}, $('#append_education_{php}echo PlaceMgr::PT_HIGHER_EDUCATION;{/php}'), {$top.PlaceID})">{$top.Name}</a>{if $top.UsersCount > 0} <sup class="tip"> <a href="/social/community/{$top.CommunityID}/users/" title="Список пользователей" class="text11" style="color: red">{$top.UsersCount|number_format:0:'':' '}</a> </sup>{/if
			}{if !$smarty.foreach.top.last},{/if}
		{/foreach}
